@model AllReady.Areas.Admin.ViewModels.CampaignDetailViewModel
<div class="row">
    <div class="col-12">
        <ol class="breadcrumb">
            <li><a asp-controller="Campaign" asp-action="Index" asp-route-area="Admin">Campaigns</a></li>
            <li>@Model.Name</li>
        </ol>
    </div>
</div>

<div class="row">
    <div id="col-main" >
        <div class="col-md-9"><h2>@Model.Name <a asp-controller="Campaign" asp-action="Edit" asp-route-id="@Model.Id" class="btn"><i class="glyphicon glyphicon-edit"></i></a> <a asp-controller="Campaign" asp-action="Delete" asp-route-area="Admin" asp-route-id="@Model.Id" class="btn"><i class="glyphicon glyphicon-trash"></i></a></h2></div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p class="date-address">@Model.StartDate.ToString("D") - @Model.EndDate.ToString("D")</p>
    </div>
</div>

<div class="row">
    <div id="col-main" class="col-md-12">
        @Model.Description
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="campaign-sponsor">
            <strong><a asp-controller="Tenant" asp-action="ShowTenant" asp-route-id="@Model.TenantId">@Model.TenantName</a></strong>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h3>Activities</h3>
    </div>    
</div>
@Html.Partial("~/Areas/Admin/Views/Activity/_List.cshtml", Model)
